{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "movie service - dev",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "${API_HOST}",
                "--port",
                "${API_PORT}",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env/dev.env",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "development",
                "order": 2
            }
        },
        {
            "name": "movie service - prod",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "${API_HOST}",
                "--port",
                "${API_PORT}"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env/prod.env",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "production",
                "order": 2
            }
        }
    ]
}