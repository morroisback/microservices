{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "movie service - local",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8082",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder:movie_service}/.venv/bin/python",
            "cwd": "${workspaceFolder:movie_service}",
            "envFile": "${workspaceFolder:movie_service}/.env/dev.env",
            "env": {
                "DB_HOST": "localhost",
                "DB_PORT": "5434",
                "CAST_SERVICE_HOST_URL": "http://localhost:8081/api/v1/casts/"
            },
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "local",
                "order": 2
            }
        },
        {
            "name": "movie service - container",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "/usr/local/bin/python",
            "cwd": "${workspaceFolder:movie_service}",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "container",
                "order": 2
            }
        },
        {
            "name": "movie service - remote",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": "7002"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder:movie_service}",
                    "remoteRoot": "/app/"
                }
            ],
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "remote",
                "order": 2
            }
        }
    ]
}